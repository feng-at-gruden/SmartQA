@model SmartCMS.Models.ChangeUserDetailViewModel
@{
    ViewBag.Title = "个人帐户管理";
    
    var me = (SmartCMS.Models.SmartCMSPrincipal)User;
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}



<div class="panel panel-default">
    <div class="panel-heading">
        MY ACCOUNT         <div style="float:right">你当前使用以下帐号登录: <text>@User.Identity.Name<small>(@me.RoleName)</small></text></div>
    </div>
    <div class="panel-body">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }
        
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }
        

        @Html.Partial("_ChangePasswordPartial")

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}