@model SmartCMS.Models.ChangeUserDetailViewModel
@{
    ViewBag.Title = "个人帐户管理";
    
    var me = (SmartCMS.Models.SmartCMSPrincipal)User;
}

<div id="breadcrumbs">
    <ul>
        <li>@Html.ActionLink("智库", "Index", "Home") </li>
        <li><a href="#">@ViewBag.Title</a></li>
    </ul>
</div>



<div class="panel panel-default">
    <div class="panel-heading">
        My Account         <div style="float:right">当前登录帐号: <text><small> @User.Identity.Name (@me.RoleName) </small></text></div>
    </div>
    <div class="panel-body">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }
        
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }
        

        @Html.Partial("_ChangePasswordPartial")

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}