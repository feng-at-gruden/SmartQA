@model SmartCMS.Models.ChangeUserDetailViewModel


@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()

    <div style="width:400px; margin:auto; text-align:center;">
        <div class="form-group">
            <div class='input-group date'>
                @Html.TextBoxFor(m => m.RealName, new { @class = "form-control", placeholder = "真实姓名", maxlength = 10, title= "真实姓名" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-user"></span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <div class='input-group date'>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "邮箱地址", maxlength = 40, title= "邮箱地址" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-inbox"></span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <div class='input-group date'>
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "当前密码", maxlength = 20 })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-lock"></span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <div class='input-group date'>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "新密码", maxlength = 20 })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-lock"></span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <div class='input-group date'>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "确认新密码", maxlength = 20 })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-lock"></span>
                </span>
            </div>
        </div>
        <button type="submit" class="btn btn-success">更 新</button>
    </div>
   
}
