@model SmartCMS.Models.CategoryViewModel

@{
    ViewBag.Title = Model.Name;
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}

<div class="panel panel-default">
    <div class="panel-heading">
        Categories & Articles
    </div>
    <div class="panel-body">
        <div class="cms-tool-bar">
            <a href="~/CMS/DeleteCategory?id=@Model.Id" class="btn btn-warning">删除本分类</a>
            <a href="~/CMS/EditCategory?id=@Model.Id" class="btn btn-success">编辑本分类</a>
            <a href="~/CMS/AddCategory?pid=@Model.Id" class="btn btn-success">添加子分类</a>
            <a href="~/CMS/AddCategory?pid=@Model.Id" class="btn btn-success" >添加问答</a>

        </div>
        @foreach(SmartCMS.Models.CategoryViewModel category in Model.SubCategories)
        {            
            <a href="~/CMS/Category?id=@category.Id" class="category-item btn btn-default"><b>@category.Name</b></a>            
        }
        <hr />
        

        <div class="dataTable_wrapper">
            <div style="text-align: right; float: right; margin: 10px 10px 0 0;">
                <span> </span>
            </div>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>问题</th>
                        <th>编辑</th>
                        <th style="text-align: center;">添加时间</th>
                        <th style="text-align: center;">热度</th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (SmartCMS.Models.ArticleViewModel item in Model.Articles)
                    {
                        <tr class="odd">
                            <td style="text-align: left;"><a href="~/CMS/Article/@item.Id">@Html.DisplayFor(modelItem => item.Question)</a></td>
                            <td style="text-align: left;">@Html.DisplayFor(modelItem => item.Hits)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Hits)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Hits)</td>                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div style="text-align:center;">
            <a href="javascript:history.go(-1);" class="btn btn-primary">返 回</a>
        </div>
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            "responsive": true,
            "paging": true,
            "ordering": true,
            "info": false,
            "searching": true,
            "pageLength": 25,
            "order": [[2, "desc"]],
        });
    });
</script>