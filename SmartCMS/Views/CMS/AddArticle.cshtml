@model SmartCMS.Models.ArticleViewModel
@{
    ViewBag.Title = "添加问答 - " + ViewBag.Category;    
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title  </h1>
            </hgroup>
        </div>
    </section>
}

<div class="panel panel-default">
    <div class="panel-heading">
        ADD NEW QUESTION
    </div>
    <div class="panel-body">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }


        @using (Html.BeginForm("AddArticle", "CMS", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CategoryId)
            @Html.HiddenFor(m => m.PendingId)
            <div style="width:698px; margin:auto; text-align:center;">
                <div class="form-group">
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Question, new { @class = "form-control", value = Model.Question, placeholder = "问题", maxlength = 50, length = 25 })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-text-width"></span>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <div class=''>
                        @Html.TextAreaFor(m => m.Answer, new { id = "myEditor", style="width:698px;height:320px;padding-left:10px;", value = Model.Answer, placeholder = "回答内容", maxlength = 1000 })                        
                    </div>
                </div>
                <div class="form-group">
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Keywords, new { @class = "form-control", value = Model.Keywords, placeholder = "关键词", maxlength = 50, length = 25 })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-tags"></span>
                        </span>
                    </div>
                    <div class="keyword-tips">多个关键字以空格隔开</div>
                </div>
                <a href="~/CMS/Category/@Model.CategoryId" class="btn btn-success" style="color:white;">返 回</a>
                
                <button type="submit" class="btn btn-success">保 存</button>
            </div>

        }

    </div>
</div>

