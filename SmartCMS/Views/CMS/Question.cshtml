@using SmartCMS.Models;
@model QuestionViewModel


@{
    ViewBag.Title = Model.Question;
}


<div id="breadcrumbs">
    <ul>
        <li>@Html.ActionLink("问题管理", "QuestionCategories", "CMS") </li>
        <li><a href="~/CMS/Questions/@Model.CategoryId">问题解答</a></li>
    </ul>
</div>

<div style="width:840px; padding:15px; border:1px solid #ddd;">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button> 
            @TempData["SuccessMessage"]
        </div>
    }

    <h1 class="question"> <i class="glyphicon glyphicon-question-sign"></i>@Model.Question</h1>


    <span class="question-info">@Model.CreatedBy  |  提问<text>@Model.Hits</text>次</span>
    <span class="question-info" style="float:right;">分类:<a href="~/CMS/Questions/@Model.CategoryId">@Model.CategoryName</a> |  最近提问时间: @Model.LastAskedAt.Value.ToString("yy-MM-dd HH:mm:ss")</span>

    <hr class="question" />

    <h3 class="best-answer"><i class="glyphicon glyphicon-ok-circle"></i>最佳答案</h3>
    <div>暂无</div>


    @foreach (AnswerViewModel answer in Model.Answers)
    {

        <text>
            @answer.Content

            <hr class="question" />
        </text>
    }


    <hr class="question" />

    @using (Html.BeginForm("Answer", "CMS", new { id = Model.Id }, FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div style="width:100%; text-align:center;">

            <div class="alert alert-info">
                如果您的回答被采纳，您将获得：系统奖励20（经验值）
            </div>

            <div class="form-group">
                <div class=''>
                    @Html.TextAreaFor(m => m.Answer, new { id = "myEditor", style = "width:100%;height:320px;padding-left:10px;", value = Model.Answer, placeholder = "词条解析或问题解答", maxlength = 1000 })
                </div>
            </div>

            <!--
            <div class="form-group" style="height:40px;">
                <a href="javascript:;" class="file">
                    选择附件文件
                    <input type="file" name="file" />
                </a><span id="selectedFile"></span>
            </div>
                -->

            <p style="text-align:right;">
                <a href="~/CMS/Questions/@Model.CategoryId" class="btn btn-success" style="color:white;">返 回</a>
                <button type="submit" class="btn btn-success">提交回答</button>
            </p>
        </div>
    }

</div>


<script>
    $(".file").on("change", "input[type='file']", function () {
        var filePath = $(this).val();
        if (filePath.length>0) {
            var arr = filePath.split('\\');
            var fileName = arr[arr.length - 1];
            $("#selectedFile").html(fileName);
        } else {
            $("#selectedFile").html("");
            return false;
        }
    })
</script>